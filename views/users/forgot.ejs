<% include ../layouts/header %>
<div class="row">
    <div class="col-md-6 mx-auto">
        <form action="/forgot" method="POST">
            <legend class="mb-4">Forgot password</legend>
            <div class="form-group">
                <label for="email">Please enter your email</label>
                <input type="email" name="email" placeholder="Your email" class="form-control" autofocus required>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-lg btn-primary form-control">
            </div>
        
        </form>
    </div>
</div>





