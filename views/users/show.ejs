<% include ../layouts/header %>



<div class="row">
    <div class="col-12 mb-4">
        <div class="col-md-4 mx-auto">
            <div class="card bg-light mt-3">
                <div class="card-header" style="text-align: center;">
                    <h4>
                        <% if(!user.facebook) { %>
                        <%= user.local.firstName + " " + user.local.lastName %>
                        <% } else { %>
                            <%= user.facebook.name %>
                        <% } %>
                    </h4>
                </div>
                <div class="card-body" style="text-align: center;">
                    <img style="width: 60%; border-radius: 50%" src="<%=user.local.avatar%>" alt="Avatar image">
                    <div class="card-title">
                        <a href="mailto:<%= user.email %>">
                            <% if(!user.facebook) { %>
                                <%= user.local.email %>
                            <% } else { %>
                                <%= user.facebook.email %>
                            <% } %>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <% campgrounds.forEach((camp) => { %>
        <div class="col-md-3 col-sm-6">
            <div class="card bg-light mb-3">
                <img src="<%= camp.image %>" class="card-img-top rounded" alt="Camping Ground Image">
                <div class="card-body text-center">
                    <div class="card-text">
                        <h5>
                            <%= camp.name %>
                        </h5>
                        <p class="mt-3">
                            <a href="/campgrounds/<%= camp._id %>" class="btn btn-info">More info</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <% }); %>
</div>

<% include ../layouts/footer %>