<% include ../layouts/header %>
    <div class="row">
        <div class="col-md-6 mx-auto">
            <form action="/reset/<%= token %>" method="POST">
                <legend class="mb-4">Reset Password</legend>
                <div class="form-group">
                    <label for="email">New password</label>
                    <input type="password" name="password" placeholder="Your new password" class="form-control" autofocus required>
                </div>
                <div class="form-group">
                    <label for="email">Confirm password</label>
                    <input type="password" name="confirm" placeholder="Confirm your password" class="form-control" required>
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-lg btn-primary form-control">
                </div>

            </form>
        </div>
    </div>





    <% include ../layouts/footer %>