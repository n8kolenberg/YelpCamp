<% include ../layouts/header %>

  <div class="row justify-content-center">
    <h1 class="col-12 text-center">Create a New Campground</h1>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-6">

      <form action="/campgrounds" method="POST" enctype="multipart/form-data">

        <div class="form-group">
          <input class="form-control" type="text" placeholder="Name" name="campground[name]" autofocus required>
        </div>

        <div class="form-group">
          <label for="image">Picture</label>
          <input type="file" id="image" name="image" accept="image/*" required>
        </div>

        <div class="form-group">
          <input class="form-control" type="number" placeholder="Price per night" name="campground[price]" min="0.01" step="0.01">
        </div>

        <div class="form-group">
          <label for="description">Description</label>
          <textarea class="form-control" type="text-area" name="campground[description]" id="description"> </textarea>
        </div>

        <div class="form-group">
          <button class="btn btn-info form-control">Submit</button>
        </div>
      </form>
      <br>
      <div class="row">
        <a href="/campgrounds">
          <h6 class="offset-md-3 offset-sm-4 offset-xs-1">Go back</h6>
        </a>
      </div>

    </div>

  </div>


  <br>
  <br>
  <br>
  <br>


  <% include ../layouts/footer %>