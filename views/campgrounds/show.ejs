<% include ../layouts/header %>
  <% include ../layouts/nav %>

    <div class="container">
      <!-- <h1>This is the show page</h1> -->
      <div class="row">
        <div class="text-center col-12">
          <img src="<%= foundCamp.image %>" alt="Camp image">
        </div>

        <div class="col-12 text-center">
          <h4>
            <%= foundCamp.name %>
          </h4>
          <p>
            <%= foundCamp.description %>
          </p>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="text-center col-12">
        <% foundCamp.comments.forEach((comment)=>{ %>
          <p>
            <strong>
              <%= comment.author %>
            </strong> -
            <%= comment.text %>
          </p>

          <% }); %>
      </div>
      <div class="text-center col-12">
        <a href="/campgrounds/<%= foundCamp._id %>/comments/new">
          <button class="btn btn-primary"> Add New Comment </button>
        </a> 
      </div>
    </div>


    <% include ../layouts/footer %>